[module/backlight]
type = custom/script
exec = light | cut -d . -f1
scroll-up = light -A 5
scroll-down = light -U 5
label = "%output%%"
interval = 0.1
format-prefix = " "
format-prefix-foreground = #ede35e
format-underline = #0a6cf5
format-padding = 0

[module/updates]
